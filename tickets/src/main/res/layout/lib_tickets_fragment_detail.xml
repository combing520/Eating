<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NearTicketListFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_50"
        android:background="#FFF4F5F9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_radius_white"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_shop_red"
                    android:drawablePadding="@dimen/dp_2"
                    android:gravity="center_vertical"
                    android:text="商家名称"
                    android:textColor="#EB514F"
                    android:textSize="@dimen/sp_12" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@mipmap/bg_tickets"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="￥100元"
                        android:textColor="@color/colorWhite"
                        android:textSize="60sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/money_tv"
                        android:layout_centerHorizontal="true"
                        android:text="代金券"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_20" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥85"
                        android:textColor="#EA4D4D"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:text="￥388"
                        android:textColor="#BFBFBF"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_shape_radius_white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/lib_tickets_selected"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:text="过期退，随时退"
                    android:textColor="@color/colorTxtTitle"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售3.8万份"
                    android:textColor="@color/colorTxtLabel"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_shape_radius_white"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限购"
                        android:textColor="@color/colorTxtLabel"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="不限张数"
                        android:textColor="@color/colorTxtTitle"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限购"
                        android:textColor="@color/colorTxtLabel"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="过期退，随时退"
                        android:textColor="@color/colorTxtTitle"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/lib_goods_right"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="20家通用"
                        android:textColor="@color/colorTxtLabel"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="门店"
                        android:textColor="@color/colorTxtLabel"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="新闻路278号(500m)"
                        android:textColor="@color/colorTxtLabel"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_shape_radius_white"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="购买须知"
                    android:textColor="@color/colorTxtTitle"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="有效期"
                    android:textColor="@color/colorTxtTitle"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:drawableLeft="@drawable/lib_tickets_dot_black"
                    android:gravity="center_vertical"
                    android:text="2019-6-17 至 2021-6-23 23:59"
                    android:textColor="@color/colorTxtTitle"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="使用时间"
                    android:textColor="@color/colorTxtTitle"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:drawableLeft="@drawable/lib_tickets_dot_black"
                    android:gravity="center_vertical"
                    android:text="11:00-22:00 (周末、法定节假日通用)"
                    android:textColor="@color/colorTxtTitle"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="试用范围"
                    android:textColor="@color/colorTxtTitle"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:drawableLeft="@drawable/lib_tickets_dot_black"
                    android:gravity="center_vertical"
                    android:text="除酒水外全场通用"
                    android:textColor="@color/colorTxtTitle"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="试用规则"
                    android:textColor="@color/colorTxtTitle"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:drawableLeft="@drawable/lib_tickets_dot_black"
                    android:gravity="center_vertical"
                    android:text="可叠加试用"
                    android:textColor="@color/colorTxtTitle"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:drawableLeft="@drawable/lib_tickets_dot_black"
                    android:gravity="center_vertical"
                    android:text="不兑现不找零"
                    android:textColor="@color/colorTxtTitle"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:drawableLeft="@drawable/lib_tickets_dot_black"
                    android:gravity="center_vertical"
                    android:text="可叠加试用"
                    android:textColor="@color/colorTxtTitle"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <!--评论-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/bg_shape_radius_white"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:text="餐厅评价"
                        android:textColor="@color/colorTxtTitle"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/lib_goods_right"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center_vertical"
                        android:text="更多评价(317条)"
                        android:textColor="@color/colorTxtContent"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>
                <!--评论列表信息-->

                <!-- item  begin-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16">

                    <cn.ccwb.lib_base.view.RoundAngleImageView
                        android:id="@+id/user_avatar_img"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:background="#EDEDED"
                        android:scaleType="centerCrop"
                        app:roundHeight="18dp"
                        app:roundWidth="18dp" />

                    <TextView
                        android:id="@+id/username_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/user_avatar_img"
                        android:text="北冥有鱼"
                        android:textColor="#444444"
                        android:textSize="@dimen/sp_16" />

                    <per.wsj.library.AndRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_below="@id/username_tv"
                        android:layout_toRightOf="@id/user_avatar_img"
                        android:isIndicator="true"
                        android:rating="0.5"
                        app:bgColor="#dfdfdf"
                        app:starColor="#FFD700"
                        app:starSpacing="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="2021/01/25"
                        android:textColor="@color/colorTxtLabel"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:text="人生如梦，年华似水，一个转身便是一个光阴的故事，一眼回眸便是一处风景，走过红尘岁月，不过是淡然最美，看过人世繁华，不过平淡最真"
                    android:textColor="#444444"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_marginTop="@dimen/dp_10">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#D8BFD8" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="#FFE4E1" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#87CEEB" />


                </LinearLayout>

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_10"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:text="已消费: 2-3野生菌火锅野生菌火锅野生菌火锅"
                    android:textColor="@color/colorTxtContent"
                    app:qmui_backgroundColor="#FFF4F5F9"
                    app:qmui_borderColor="@color/colorTransport"
                    app:qmui_radius="@dimen/dp_8" />

                <!-- item  end-->

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥120"
            android:textColor="#EA4D4D"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_weight="1"
            android:text="￥388"
            android:textColor="#BFBFBF"
            android:textSize="@dimen/sp_12" />


        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_4"
            android:text="立即抢购"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:qmui_backgroundColor="#EA4D4D"
            app:qmui_borderColor="@color/colorTransport"
            app:qmui_radius="@dimen/dp_16" />

    </LinearLayout>


</RelativeLayout>