<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_8">

            <TextView
                android:id="@+id/goods_discount_store_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/lib_goods_shop"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center_vertical"
                android:textColor="@color/colorTxtContent"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/goods_discount_store_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTxtContent"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <cn.ccwb.lib_base.view.RoundAngleImageView
                android:id="@+id/goods_discount_goods_pic_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="@dimen/dp_8"
                android:scaleType="centerCrop"
                app:roundHeight="@dimen/dp_4"
                app:roundWidth="@dimen/dp_4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/goods_discount_goods_name_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/goods_discount_sale_cnt_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/colorTxtLabel"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/goods_discount_category_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/colorTxtContent"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/goods_discount_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/colorTxtContent"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/goods_discount_cast_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/qmui_config_color_red"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:id="@+id/goods_discount_price_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:ellipsize="end"
                        android:lines="1" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

