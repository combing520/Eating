<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_fragment_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_navigation"
    android:background="#FFF4F5F9"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/ticket_detail_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_arrow_back"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:paddingStart="@dimen/dp_10" />

    <TextView
        android:id="@+id/ticket_detail_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/ic_more"
        android:paddingEnd="@dimen/dp_10" />


    <TextView
        android:id="@+id/ticket_detail_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@id/ticket_detail_more"
        android:background="@drawable/ic_share"
        android:paddingEnd="@dimen/dp_24" />

    <ImageView
        android:id="@+id/ticket_detail_collection"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@id/ticket_detail_share"
        android:background="@drawable/ic_collection"
        android:paddingEnd="@dimen/dp_24"
        android:scaleType="centerCrop" />

</RelativeLayout>

